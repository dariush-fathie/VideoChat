<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/call_header" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintVertical_bias="0.8">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_decline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_phone_slash_24dp"
                app:tint="@color/red" />

            <ir.jin724.videochat.view.WebRtcAnswerDeclineButton
                android:id="@+id/answer_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/calling" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_quick_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_comment_alt_lines" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>